<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>ChemID-Filter.log</file>
    <append>false</append>
    <encoder>
      <pattern>%date [%level] %thread [%logger{50}] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="error">
    <appender-ref ref="FILE" />
  </root>
</configuration>
